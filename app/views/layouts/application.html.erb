<!DOCTYPE html>
<html>
<head>
  <title>WorkSchedule</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

</head>

<body>


<nav class="navbar navbar-expand-lg bg-light">

  <%= link_to 'Главная', root_path, class: 'navbar-brand' %>
  <ul class="navbar-nav mr-auto">
    <li class="nav-item"><%= link_to 'Графики', schedules_path, class: 'nav-link' %></li>
  </ul>
  <% if user_signed_in? %>

    <%= link_to (current_user.name? ? current_user.name : current_user.email), current_user, class: 'nav-item nav-link' %>
    <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: 'nav-item nav-link' %>

  <% else %>

    <%= link_to 'Войти', new_user_session_path, class: 'nav-item nav-link' %> или <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'nav-item nav-link' %>

  <% end %>
</nav>

<% if flash.any? %>
  <div id="notice" class="alert alert-success"><%= notice %></div>
<% end %>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
